<html lang="en">


{{>header}}

<body>
  {{>navbar}}
  <!-- my header hero part -->
  <div class="header_hero">
    <div class="container">

      <div class="row">
        <!-- left side text -->
        <div class="col-lg-6 col-8 mx-auto">
          <div class="header_hero__text">

            <!-- right side images -->
            <div class="col-lg-6 col-8 mx-auto">
              <div class="header_hero__text">
                <form action="/register" method="POST" class="row g-4 mx-6">
                  <div class="row-auto">
                    <input type="text" class="form-control" placeholder="First Name * " value="" name="firstname" />
                  </div>
                  <div class="row-auto">
                    <input type="text" class="form-control" placeholder="Last Name * " value="" name="lastname" />
                  </div>
                  <div class="row-auto">
                    <input type="email" class="form-control" placeholder="Email Id * " value="" name="email" />
                  </div>
                  <div class="row-auto">
                    <input type="phone" minlength="10" maxlength="10" class="form-control" placeholder="Phone Number * "
                      value="" name="phone" />
                  </div>
                  <div class="row-auto">
                    <input type="text" class="form-control" placeholder="Age * " value="" name="age" />
                  </div>
                  <div class="row-auto">
                    <input type="password" class="form-control" placeholder="Password * " value="" name="password" />
                  </div>
                  <div class="row-auto">
                    <input type="password" class="form-control" placeholder="Confirm Password * " value=""
                      name="confirmpassword" />
                  </div>

                  <div class="d-flex">

                    <button class="my_btn" type="submit " value="Register">SignIn</button>

                  </div>

                </form>
              </div>
            </div>
          </div>

        </div>
      </div>
      <!-- my header hero part ends -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js "
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa "
        crossorigin="anonymous "></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js "
        integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk "
        crossorigin="anonymous "></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js "
        integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK "
        crossorigin="anonymous "></script>
</body>

</html>